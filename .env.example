# ========================================
# YTDownloadX - Environment Configuration
# ========================================
# Copy this file to .env and update values

# Application Settings
# ----------------------------------------
# Flask environment (development, production)
FLASK_ENV=production

# Enable debug mode (True/False) - NEVER use True in production!
FLASK_DEBUG=False

# Application port
PORT=5000

# Application host
HOST=0.0.0.0

# Secret key for Flask sessions (generate a random string)
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-here

# Download Settings
# ----------------------------------------
# Directory for temporary downloads
DOWNLOAD_DIR=downloads

# Time-to-live for downloaded files (in seconds)
# Default: 1800 (30 minutes)
DOWNLOAD_TTL=1800

# Maximum file size for downloads (in MB)
# Default: 500 (500 MB)
MAX_DOWNLOAD_SIZE=500

# Maximum concurrent downloads
MAX_CONCURRENT_DOWNLOADS=3

# yt-dlp Settings
# ----------------------------------------
# Use simple or enhanced yt-dlp configuration
# Options: simple, enhanced
YTDLP_MODE=enhanced

# Enable cookies for age-restricted videos
# Set to True if you have cookies.txt file
USE_COOKIES=False

# Path to cookies file
COOKIES_PATH=cookies.txt

# Default video quality
# Options: best, 2160p, 1440p, 1080p, 720p, 480p, 360p
DEFAULT_VIDEO_QUALITY=best

# Default audio quality (for MP3)
# Options: 320, 256, 192, 128
DEFAULT_AUDIO_QUALITY=192

# Security Settings
# ----------------------------------------
# Enable HTTPS redirect (True/False)
FORCE_HTTPS=True

# CORS allowed origins (comma-separated)
# Example: https://example.com,https://app.example.com
CORS_ORIGINS=*

# Rate limiting
# Format: requests per minute
RATE_LIMIT=30

# Enable security headers
ENABLE_SECURITY_HEADERS=True

# Logging Settings
# ----------------------------------------
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path
LOG_FILE=ytdownloadx.log

# Enable file logging
LOG_TO_FILE=False

# Log format
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Database Settings (if using database in future)
# ----------------------------------------
# DATABASE_URL=sqlite:///ytdownloadx.db
# DATABASE_POOL_SIZE=5
# DATABASE_MAX_OVERFLOW=10

# Redis Settings (if using Redis for caching)
# ----------------------------------------
# REDIS_URL=redis://localhost:6379/0
# REDIS_CACHE_TTL=3600

# Email Settings (for notifications)
# ----------------------------------------
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM=noreply@ytdownloadx.com

# Cloud Storage (if using S3, etc.)
# ----------------------------------------
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=us-east-1
# S3_BUCKET=ytdownloadx-downloads

# Analytics (if using analytics)
# ----------------------------------------
# GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X
# ENABLE_ANALYTICS=False

# Feature Flags
# ----------------------------------------
# Enable/disable features
ENABLE_PLAYLISTS=True
ENABLE_QR_CODES=True
ENABLE_NOTIFICATIONS=True
ENABLE_DOWNLOAD_HISTORY=False

# UI Settings
# ----------------------------------------
# Enable particle background animation
ENABLE_PARTICLES=True

# Enable glare hover effect
ENABLE_GLARE_EFFECT=True

# Theme (dark, light, auto)
DEFAULT_THEME=dark

# Deployment Settings
# ----------------------------------------
# Platform (render, heroku, railway, docker, local)
DEPLOYMENT_PLATFORM=local

# Application URL (for QR codes)
APP_URL=http://localhost:5000

# Worker Settings (for production)
# ----------------------------------------
# Number of Gunicorn workers
WORKERS=4

# Worker timeout (seconds)
WORKER_TIMEOUT=120

# Worker class (sync, gevent, eventlet)
WORKER_CLASS=sync

# Maintenance Mode
# ----------------------------------------
# Enable maintenance mode
MAINTENANCE_MODE=False

# Maintenance message
MAINTENANCE_MESSAGE=We are currently performing maintenance. Please check back soon.

# Development Settings
# ----------------------------------------
# Enable hot reload
HOT_RELOAD=False

# Enable profiling
ENABLE_PROFILING=False

# Show detailed error pages
SHOW_ERROR_DETAILS=False

# ========================================
# Notes:
# ----------------------------------------
# 1. Never commit .env file to git
# 2. Keep .env.example updated with new variables
# 3. Use strong random values for SECRET_KEY
# 4. Set FLASK_DEBUG=False in production
# 5. Configure CORS_ORIGINS properly in production
# 6. Enable FORCE_HTTPS in production
# 7. Set appropriate RATE_LIMIT values
# 8. Use environment-specific values
# ========================================
